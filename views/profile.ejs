        <!--CITATIONS AREA-->
        <!-- <div class="col-sm-6"> -->
          <h3>Citations</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].book %></span>
              <span><%= messages[i].city %></span>
              <span><%= messages[i].publisher %></span>
              <span><%= messages[i].year %></span>
              <span><%= messages[i].description %></span>
              <span>
                <form action="/messages/description?_method=PUT" method="POST">
                  <input type="hidden" name="id" value="<%= messages[i]._id %>">
                  <input type="text" placeholder="Enter description" name="updateDescription">
                  <button type="submit">Submit description</button>
                </form>
              </span>
              <span><button class="delete">Delete</button></span>
            </li>
          <% } %>
        </ul>
          
        <!--CITATIONS INPUT-->
          <h2>Enter Book Information</h2>
          <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" placeholder="Last Name, First Name" name="name">
            <input type="text" placeholder="Book Title" name="book">
            <input type="text" placeholder="City" name="city">
            <input type="text" placeholder="Publisher" name="publisher">
            <input type="number" placeholder="Year Published" name="year">
            <!-- <input type="text" placeholder="Your thoughts" name="notes"> -->
            <button type="submit">Submit</button>
          </form>
